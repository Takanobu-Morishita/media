<div class="search">
  <%= form_with model: @q, scope: :q, url: posts_path, method: :get, local: true do |f| %>
    <label>タイトル</label>
    <%= f.text_field :title, class: 'input-text', placeholder: '入力してください' %>
    <label>本文</label>
    <%= f.text_field :body, class: 'input-text', placeholder: '入力してください' %>

    <%= f.submit '検索' %>
    <%= link_to "検索をリセット", posts_path, class: 'btn-reset' %>
  <% end %>
</div>

