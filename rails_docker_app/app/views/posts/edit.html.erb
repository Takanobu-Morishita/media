<h1 class="display">編集画面</h1>

<%= form_for(@post, url: post_path(@post)) do |f| %>
  <div class="display_title">
    <%= f.label :タイトル %><br>
    <%= f.text_field :title, autofocus: true, :placeholder =>"#{@post.title}" %>
  </div>
  <div class="display_body">
    <%= f.label :本文 %><br>
    <%= f.text_area :body, :placeholder =>"#{@post.body}" %>
  </div>
  <div class="display_genre">
    <%= f.label :ジャンル %><br>
    <%= f.select :genre, [["選択して下さい"], ["生活"], ["授業"], ["技術"],["サークル"]] %>
  </div>

  <div class="field">
    <%= f.label :url %>
    <%= f.text_field :url, :size => 140, id: "url"  %>
  </div>

  <div class="display_image">
    <%= f.label :image %>
    <%= f.file_field :image, class:'f-control', accept: 'image/*'%>
    <%= f.hidden_field :image_cache %>
  </div>
  <div class="display_update">
    <%= f.submit "更新" %>
  </div>
  <link rel="stylesheet" href="./app/assets/stylesheets/application.css">
<% end %>

