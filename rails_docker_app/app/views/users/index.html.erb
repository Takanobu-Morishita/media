<!DOCTYPE html>
<html>
  <head></head>
  <body>
  <div class="header">
    <%= link_to "投稿一覧", posts_path, class: "navbar-item button is-warning is-light", id: "user_list_4" %>
    </div>
    <h1 class="display">ユーザ一覧</h1>
    <table class="list_content">
      <tr>
        <th>ユーザ名</th>
        <th>メールアドレス</th>
        <th>登録日</th>
        <th>更新日</th>
      </tr>
      <% @users.each do |user| %>
        <tr>
          <td style="text-align:center;"><%= link_to user.username, user_path(user) %></td>
          <td style="text-align:center;"><%= user.email %></td>
          <td style="text-align:center;"><%= user.created_at.strftime('%Y年%m月%d日') %></td>
          <td style="text-align:center;"><%= user.updated_at.strftime('%Y年%m月%d日') %></td>
          <td style="text-align:center;"><%= image_tag user.image.url, size: '300x230', class:'card-img-top object-fit-cover' %></td>
        </tr>
      <% end %>
    </table>
  </body>
  <%= paginate @users %>
</html>
